{
  "run": {
    "timeout": "10m"
  },
  "linters": {
    "enable": [
      "asasalint",
      "containedctx",
      "containedctx",
      "contextcheck",
      "errcheck",
      "ginkgolinter",
      "goconst",
      "gocritic",
      "gofmt",
      "goimports",
      "gosimple",
      "govet",
      "importas",
      "ineffassign",
      "noctx",
      "nosprintfhostport",
      "predeclared",
      "predeclared",
      "reassign",
      "revive",
      "staticcheck",
      "tagliatelle",
      "tenv",
      "thelper",
      "typecheck",
      "unconvert",
      "unused",
      "whitespace"
    ]
  },
  "linters-settings": {
    "goconst": {
      "ignore-tests": true
    },
    "tagliatelle": {
      "case": {
        "rules": {
          "yaml": "snake",
          "json": "snake"
        }
      }
    }
  }
}